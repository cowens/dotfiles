# new entries go on the ahead of the current path
# so this file should add paths in reverse order
# they should be looked up in

# ZipRecruiter related, last path to look in
# base system paths, next to last
PATH="/usr/bin:/bin:/usr/sbin:/sbin:/Users/chas/ziprecruiter/bin:/Users/chas/ziprecruiter/bin/laptop:/Users/chas/ziprecruiter/infrastructure/terraform/bin"

# kitty
PATH="/Applications/kitty.app/Contents/MacOS:$PATH"

# Java related
export PATH="/usr/local/opt/openjdk/bin:$PATH"
export CPPFLAGS="-I/usr/local/opt/openjdk/include $CPPFLAGS"

# Go related
export GOPATH=~/go
PATH="$GOPATH/bin:$PATH"

# Brew related
PATH="/usr/local/sbin:$PATH"
PATH="/usr/local/bin:$PATH"

# brew installed Ruby stuff
export LDFLAGS="-L/usr/local/opt/ruby/lib"
export CPPFLAGS="-I/usr/local/opt/ruby/include $CPPFLAGS"
export PATH="/usr/local/opt/ruby/bin:/usr/local/lib/ruby/gems/3.0.0/bin:$PATH"

# mysql client

PATH="$PATH:/usr/local/opt/mysql-client/bin"

# heroku config
HEROKU_AC_ZSH_SETUP_PATH=/Users/chas/Library/Caches/heroku/autocomplete/zsh_setup && test -f $HEROKU_AC_ZSH_SETUP_PATH && source $HEROKU_AC_ZSH_SETUP_PATH;

# asdf related
source $(ls /usr/local/Cellar/asdf/*/libexec/asdf.sh)

# Perl
eval "$(plenv init - zsh)"

# Ruby
eval "$(rbenv init - zsh)"

# individual, self-compiled apps, not currently using this pattern in favor
# of brew, asdf, plenv, etc
