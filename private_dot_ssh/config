Host *
	# I don't want keys sticking around in ssh-agent forever
	AddkeysToAgent 1d

Host github.com
	HostName github.com
	User git
	IdentityFile ~/.ssh/id_ed25519
	IdentitiesOnly yes

Host p perlish perlish.org
	ForwardAgent yes
	User cowens
	Hostname perlish.org

Host crab.local crab c 192.168.1.14
	ForwardAgent yes
	User chas.owens
	Hostname 192.168.1.14
	IdentitiesOnly yes
	IdentityFile ~/.ssh/id_ed25519

Host penguin
	ForwardAgent yes
	User cowens
	Hostname 100.115.92.199
	IdentitiesOnly yes
	IdentityFile ~/.ssh/id_ed25519

Host dancer.local dancer d
	ForwardAgent yes
	User cowens
